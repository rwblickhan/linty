{
  "rules": [
    {
      "id": "WarnOnTodos",
      "message": "Are you sure you meant to leave a TODO?",
      "regex": "(TODO|todo)",
      "severity": "warning"
    },
    {
      "id": "NoXcxcInDocs",
      "message": "Don't leave xcxc in docs!",
      "regex": "(XCXC|xcxc)",
      "severity": "error",
      "includes": ["**/*.md"],
      "excludes": ["**/README.md"]
    },
    {
      "id": "AlwaysBumpDate",
      "message": "Don't leave xcxc in docs!",
      "regex": "\\d\\d\\d\\d-\\d\\d-\\d\\d",
      "severity": "error",
      "includes": ["**/*.md"],
      "excludes": ["**/README.md"]
    }
  ]
}
